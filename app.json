{
  "expo": {
    "name": "PropPlace",
    "slug": "PropPlace",
    "scheme": "PropPlace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/logo.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Permita o acesso à galera para selecionar suas fotos favoritas."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Habilite o uso da sua localização para ter uma experiência personalizada."
        }
      ],
      "expo-router",
      ["expo-font",
      {"fonts": ["./src/assets/fonts/SpaceMono-Regular.ttf"]}]
    ],
    "splash": {
      "image": "./src/assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./src/assets/images/logo.png"
    }
  }
}
